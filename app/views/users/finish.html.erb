<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, authenticity_token: true, url:user_path do |f| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-4">
        <h3>Select a username</h3>
      </div>
    </div>
    <% if @user.email.nil? || @user.email.nil? %>
      <div class="row">
        <div class="col-md-4 label">
          <%= f.label "Email", class: "form-label" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-input" %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-4 label">
        <%= f.label "Username", class: "form-label" %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :username, class: "form-input" %>
      </div>
    </div>
    <ul class="action-links">
      <li class="submit">
        <%= f.submit "Finish", class: "form-submit" %> 
      </li>
    </ul>
    <% end %>
  </div>
</div>