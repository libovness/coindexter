<%= link_to network, "class" => "network-widget widget #{network.category.name.downcase unless network.category.nil?}", "data-status" => "#{network.status unless network.status.nil?}" do %>
	<div class="col-md-3 col-xs-5 <%= network.category.name.downcase unless network.category.nil? %>  <%= i == 0 ? 'first-network-widget' : '' %> <%= "col-md-offset-1 col-xs-offset-0" unless i == 0 || i % 3 == 0 %> <%= "col-xs-offset-1 col-md-offset-0" unless i == 0 || i % 2 == 0 %> network-in-categories">
		<% if network.logo.nil? || network.logo.blank? %>
			<%= image_tag "fallback/default.png", size: '60x60', class: 'network-logo' %>
		<% else %>
			<%= image_tag network.logo, size: '60x60', class: 'network-logo' %>
		<% end %>
		<h6><%= network.name.downcase[0..15] %></h6>
	</div>
<% end %>