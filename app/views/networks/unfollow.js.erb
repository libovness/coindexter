<% if @success %>
	$(".action-links > li:first-child").html("<%= escape_javascript link_to('Follow #{@network.name}', follow_network_path, remote: true, method: :put, class: 'action-link', id: 'follow-network', accesskey: 'F') %>");
	$("#follow-network").text("Follow " + "<%= escape_javascript @network.name %>");
	$(".alert").show();
	$(".alert").html("<%= flash.now[:alert] %>");
	$(".alert").delay(2000).fadeOut(400);
<% else %>
<% end %>