<% if @success %>
	$(".action-links > li:first-child").html("<%= escape_javascript link_to('Following #{@network.name}', unfollow_network_path, remote: true, method: :put, class: 'action-link', id: 'following-network', accesskey: 'F') %>");
	$("#following-network").text("Following " + "<%= escape_javascript @network.name %>");
	$(".notice").html("<%= escape_javascript flash[:success] %>")
<% else %>

<% end %>