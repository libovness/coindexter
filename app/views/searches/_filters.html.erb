<div class="col-md-2 col-md-offset-1 left-nav">
	<ul class="info-menu status-info-menu" id="search-status-info-menu">
		<li id="status-show-all" data-status="all" class="active-item">
			<p>All statuses</p>
		</li>
		<li class="status-link" data-status="live">
			<p>Live</p>
		</li>
		<li class="status-link" data-status="preproduction">
			<p>Preproduction</p>
		</li>
		<li class="status-link" data-status="concept">
			<p>Concept</p>
		</li>
	</ul>	
	<ul class="info-menu category-info-menu" id="search-category-info-menu">
		<li id="category-show-all" class="active-item" data-category="all"><p>All categories</p></li>
		<% @result_categories.each do |category| %>
			<% unless category.nil? %>
				<li class="category-link" id=<%= category.name.gsub(/\s+/, "").downcase %> data-category=<%= category.name.gsub(/\s+/, "").downcase %>>
						<p><%= category.name.capitalize %></p>
				</li>
			<% end %>
		<% end %>
	</ul>
</div>