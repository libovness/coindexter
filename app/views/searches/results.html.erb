<div class="row">
	<%= render 'filters' %>
	<div class="col-md-6 main">
		<ul>
			<li class="search-block">
				<div class="row">
					<div class="col-md-10 col-md-offset-2">
						<h4 class="list-name">Results for '<%= @query %>'</h4>
						<% if @results.empty? %>
							<p>No coins found</p>
						<% else %>
							<% @results.each_with_index do |result, i| %>
								<%= render '/categories/coin_widget', :coin => result, :i => i %>
							<% end %>
						<% end %>
					</div>
				</div>
			</li>
		</ul>
	</div>
</div>