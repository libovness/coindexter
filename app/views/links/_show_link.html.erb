<ul>
	<li class="link-block block">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 col-xs-12 col-xs-offset-0" id="show-single-link">
				<h3 class="link-title">
					<% if @link.link.nil? || @link.link == "" %>
						<%= @link.title %>
					<% else %>
						<%= link_to @link.title, @link.link %>	
					<% end %>
				</h3>
				<p class="link-body"><%= @link.body %></h3>
				<h6 class="when-posted">posted <%= time_ago_in_words(@link.created_at) %></h6>
				<div class="who-posted-cnt">
					<%= link_to @link.user, class: "who-posted" do %>
						<%= image_tag(@link.user.avatar, size: '20x20', class: 'avatar') if defined?(@link.user.avatar) %>
						<%= current_user == @link.user ? "Me" : @link.user.username%>
					<% end %>
				</div>
				<%= render 'comments/form', link: @link %>
				<ul class="comments-cnt">
				  <%= render(partial: 'comments/comment', collection: @link.comments, locals: {i: 0}) %>
				</ul>
			</div>
		</div>
	</li>
</ul>