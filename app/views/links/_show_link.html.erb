<ul>
	<li class="link-block block">
		<div class="row">
			<div class="col-md-10 col-md-offset-1" id="show-single-link">
				<h3 class="link-title"><%= link_to @link.title, @link.link %></h3>
				<h6 class="when-posted">posted <%= time_ago_in_words(@link.created_at) %> ago</h6>
				<p class="link-body"><%= @link.body %></h3>
				<%= render 'comments/form', link: @link %>
				<ul class="comments-cnt">
				  <%= render(partial: 'comments/comment', collection: @link.comments, locals: {i: 0}) %>
				</ul>
			</div>
		</div>
	</li>
</ul>