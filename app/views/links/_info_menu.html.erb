<ul class="info-menu">
	<% if @link.networks.any? %>
		<li class="menu-title">related network</li>
		<% @link.networks.each do |network| %>
			<li>
				<%= link_to network_path(network) do %>
					<div class="user-log-classification">
						<div class="user-log-classification-network">
							<% if network.logo.nil? || network.logo.blank? %>
								<%= image_tag "fallback/default.png", size: '20x20', id: 'network-logo' %>
							<% else %>
								<%= image_tag network.logo, size: '20x20', id: 'network-logo' %>
							<% end %>
							<%= truncate(network.name, length: 16) %>
						</div>
					</div>
				<% end %>
			</li>
		<% end %>
	<% end %>
</ul>