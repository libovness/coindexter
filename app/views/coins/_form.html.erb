<%= form_for @coin, authenticity_token: true, html: { multipart: true } do |f| %>
	<div class="row">
		<div class="col-md-8 col-md-offset-4">
			<%= image_tag @coin.logo_url.url if @coin.logo_url.url size: "60x60", id: "coin-logo" %>
			<%= f.file_field :logo_url %>
			<h1 id="coin-name"><%= @coin.name %></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "Coin name", class: "form-label" %>
		</div>
		<div class="col-md-8">
			<%= f.text_field :name, class: "form-input" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "How to earn", class: "form-label" %>
		</div>
		<div class="col-md-8">
			<%= f.text_area :info_way_to_earn, rows: 6, class: "form-input" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "Status", class: "form-label select-label" %>
		</div>
		<div class="col-md-8">
			<%= select_tag(:info_status, options_for_select([["Concept","Concept"],["Pre-production","Pre-production"],["Live","Live"]]), include_blank: true) %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "Additional info", class: "form-label" %>
		</div>
		<div class="col-md-8">
			<%= f.text_area :info_additional, rows: 6, class: "form-input" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-4">
			<h6>application</h6>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "Name", class: "form-label" %>
		</div>
		<div class="col-md-8">
			<%= f.text_field :application_name, class: "form-input" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "Description", class: "form-label" %>
		</div>
		<div class="col-md-8">
			<%= f.text_area :application_description, rows: 6, class: "form-input" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "Status", class: "form-label select-label" %>
		</div>
		<div class="col-md-8">
			<%= select_tag(:info_status, options_for_select([["Concept","Concept"],["Pre-production","Pre-production"],["Live","Live"]]), include_blank: true) %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "Category", class: "form-label select-label" %>
		</div>
		<div class="col-md-8">
			  <%= f.collection_select :application_category, Category.order(:name),:id,:name, include_blank: true %>
		</div>
	</div>	
	<div class="row">
		<div class="col-md-4 label">
			<%= f.label "URL", class: "form-label" %>
		</div>
		<div class="col-md-8">
			<%= f.text_field :application_url, class: "form-input" %>
		</div>
	</div>	
	<div class="row">
		<div class="col-md-8 col-md-offset-4">
			<%= f.submit "Submit", class: "btn btn-primary" %> 
		</div>
	</div>
<% end %>
<%= debug(params) if Rails.env.development? %>