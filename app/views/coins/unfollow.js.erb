<% if @success %>
	$(".action-links > li:first-child").html("<%= escape_javascript link_to('Follow #{@coin.name}', follow_network_coin_path, remote: true, method: :put, class: 'action-link', id: 'follow-coin', accesskey: 'F') %>");
	$("#follow-coin").text("Follow <%= escape_javascript @coin.name %>");
	$(".alert").show();
	$(".alert").html("<%= flash.now[:alert] %>");
	$(".alert").delay(2000).fadeOut(400);
<% else %>
<% end %>