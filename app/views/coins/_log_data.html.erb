<% if defined?(email) %> 
	<ul class="log-list" style="padding: 0 !important; margin: 0  !important; text-indent: 0  !important; list-style-type: 0  !important;"> 
<% else %>
	<ul class="log-list"> 
<% end %>
		<% log.changes.each do |change| %>
			<% if defined?(email) %> 
				<li style="padding: 0; margin: 0; text-indent: 0; list-style-type: 0;"> 
			<% else %>
				<li>
			<% end %>
					<% case change[:change_attr] %>
						<% when "Repositories", "Exchanges" %>
							<p>
								<%= change[:change_attr].capitalize %>
								<% if change[:change_type] == "added" %>
									added: 
										<% puts "log is #{change[:change].second}" %>
										<%= link_to change[:change].second.first["name"], change[:change].second.first["url"] %>
								<% elsif change[:change_type] == "edited" %>
									changed from 
										<% change[:change].first.each_with_index do |change, i| %>
											<%= link_to change["name"], change["url"] %>
										<% end %>
									to 
										<% change[:change].second.each_with_index do |change, i| %>
											<%= link_to change["name"], change["url"] %>
										<% end %>
								<% end %>
							</p>
						<% when "Network", "Description" %>
							<p>
								<%= change[:change_attr].capitalize %>
								<% if change[:change_type] == "added" %>
									added:
									<%= link_to change[:change].second.name, change[:change].second unless change[:change].nil? %>
								<% elsif change[:change_type] == "edited" %>
									changed from 
										<%= link_to change[:change].first["name"], change[:change].first unless change[:change].nil? %>
									to 
										<%= link_to change[:change].second["name"], change[:change].second unless change[:change].nil? %>
								<% end %>
							</p>
						<% when "Created" %>
							<p>
								Created 
								<%= link_to log.coins.name, network_coin_path(log.coins.network, log.coins) %>
							</p>
						<% when "team" %>
								<% if change[:change_type] == "added" %>
									Added the team: <%= change[:change].second %>
								<% elsif change[:change_type] == "edited" %>
									Changed team from <%= change[:change].first %> to <%= change[:change].second %>
								<% end %>
						<% when "Status" %>
							<% if change[:change_type] == "added" %>
								Set <%= change[:change_attr].downcase %>: <div class="status-icon <%= change[:change].second %>-icon"></div><p class="status <%= change[:change].second %>-status"><%= change[:change].second %></p>
							<% elsif change[:change_type] == "edited" %>
								Changed <%= change[:change_attr].downcase %> from <div class="status-icon <%= change[:change].first %>-icon"></div><p class="status <%= change[:change].first %>-status"><%= change[:change].first %></p> to <div class="status-icon <%= change[:change].second %>-icon"></div><p class="status <%= change[:change].second %>-status"><%= change[:change].second %></p>
							<% end %>
						<% when "logo" %>
							<p>
								New logo
							</p>	
						<% else %>
							<p>
								<%= change[:change_attr].capitalize %>
								<% if change[:change_type] == "added" %>
									added: "<%= change[:change].second.capitalize %>"
								<% elsif change[:change_type] == "edited" %>
									changed from "<%= change[:change].first %>" to "<%= change[:change].second.capitalize %>"
								<% end %>
							</p>
					<% end %>
				</li>
		<% end %>
	</ul>