<% if @success %>
	$(".action-links > li:first-child").html("<%= escape_javascript link_to('Following #{@coin.name}', unfollow_network_coin_path(@coin.network,@coin), remote: true, method: :put, class: 'action-link', id: 'following-coin', accesskey: 'F') %>");
	$("#following-coin").text("Following <%= escape_javascript @coin.name %>");
	$(".notice").show();
	$(".notice").html("<%= flash.now[:notice] %>");
	$(".notice").delay(2000).fadeOut(400);
<% else %>

<% end %>