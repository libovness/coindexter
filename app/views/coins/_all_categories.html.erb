<% @categories.each do |category| %>
	<ul class="full-category-cnt" id=<%= category.name %>>
		<% unless category.coins.empty? %>
			<li class="category-coin-block block">
				<div class="row">
					<div class="col-md-10 col-md-offset-2">
						<div class="row coins-in-categories <%= category.name %>" > 
							<h1 class="list-name"><%= category.name %></h1>
							<% category.coins.each_with_index do |coin, i| %>		
								<%= render 'coin_widget', :coin => coin, :i => i %>
							<% end %>
						</div>
					</div>
				</div>
			</li>
		<% end %>
	</ul>
<% end %>
<ul class="action-links">
	<li><%= link_to("Add new coin", new_coin_path, class: "action-link", accesskey: 'A') %></li>
</ul>