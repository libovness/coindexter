<div class="row">
	<div class="col-md-2 col-md-offset-1 left-nav">
		<%= render(partial: 'info_menu', locals: {coin: @coin, active_item: "details"}) %>
	</div>
	<div class="col-md-9 main ">
		<div class="info-header">
			<%= render 'coin_main_info_header', coin: @coin %>
		</div>
		<div class="content">
			<%= render 'show_coin' %>
		</div>
	</div>
	<ul class="action-links">
		<% if current_user %>
			<li><%= link_to("Edit #{@coin.name}", edit_network_coin_path, class: "action-link", accesskey: 'E') %></li>
		<% else %>
			<li><%= link_to("Edit #{@coin.name}", '/signin', class: "action-link", accesskey: 'E') %></li>
		<% end %>
	</ul>
</div>